<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
  
  <camelContext xmlns="http://camel.apache.org/schema/spring">   
  	<!--调用监测监控传感器控制类 -->
    <route>
      <from uri="servlet:///monitor/monitorSensor"/>
      <process ref="monitor.monitorSensor"/>    
    </route>
     	
    <!--1.	预先登记设备 -->
    <route>
      <from uri="servlet:///monitor/devices/preregister"/>
      <process ref="monitor.devices.preregister"/>    
    </route>
    
    <!--2.	获取设备列表 -->
    <!--3.	搜索设备 -->
    <route>
      <from uri="servlet:///monitor/devices"/>
      <process ref="monitor.devices"/>    
    </route>
    
    <!--4.	获取设备 -->
    <!--5.	更新设备 -->
    <!--6.	删除设备-->
    <route>
      <from uri="servlet:///monitor/devices/do"/>
      <process ref="monitor.devices.do"/>    
    </route>
    
    <!--7.	获取传感器列表 -->
    <route>
      <from uri="servlet:///monitor/devices/sensors"/>
      <process ref="monitor.devices.sensors"/>    
    </route>
    
    <!--8.	获取传感器 -->
    <!--9.	更新传感器-->
    <!--10.	获取传感器数据-->
    <route>
      <from uri="servlet:///monitor/devices/sensors/do"/>
      <process ref="monitor.devices.sensors.do"/>    
    </route>
  </camelContext>
  
  <bean id="monitor.monitorSensor" class="net.evecom.ecssp.esb.EsbHttpProcessor">
	<property name="servicePoint" ref="monitor"/>
	<property name="path" value="[monitor]/jfs/monitor/monitorSensor/{action}"/>
	<property name="variables" ref="variables"/>
  </bean>
  
  <bean id="monitor.devices.preregister" class="net.evecom.ecssp.esb.EsbHttpProcessor">
	<property name="servicePoint" ref="monitor_c"/>
	<property name="path" value="[monitor_c]/devices/preregister"/>
	<property name="variables" ref="variables"/>
  </bean>
  
  <bean id="monitor.devices" class="net.evecom.ecssp.esb.EsbHttpProcessor">
	<property name="servicePoint" ref="monitor_c"/>
	<property name="path" value="[monitor_c]/devices"/>
	<property name="variables" ref="variables"/>
  </bean>
  
  <bean id="monitor.devices.do" class="net.evecom.ecssp.esb.EsbHttpProcessor">
	<property name="servicePoint" ref="monitor_c"/>
	<property name="path" value="[monitor_c]/devices/{device_id}"/>
	<property name="variables" ref="variables"/>
  </bean>
  
  <bean id="monitor.devices.sensors" class="net.evecom.ecssp.esb.EsbHttpProcessor">
	<property name="servicePoint" ref="monitor_c"/>
	<property name="path" value="[monitor_c]/devices/{device_id}/sensors"/>
	<property name="variables" ref="variables"/>
  </bean>
  
  <bean id="monitor.devices.sensors.do" class="net.evecom.ecssp.esb.EsbHttpProcessor">
	<property name="servicePoint" ref="monitor_c"/>
	<property name="path" value="[monitor_c]/devices/{device_id}/sensors/{sensor_id}"/>
	<property name="variables" ref="variables"/>
  </bean>
</beans>